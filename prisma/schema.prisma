generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  email     String    @unique
  name      String
  age       Int
  password  String

  role      Role      @default(THERAPIST)

  // Lista de pacientes que ele atende (N:N)
  patientIds String[] @db.ObjectId
  patients   Patient[] @relation(fields: [patientIds], references: [id])

  // Campos espec√≠ficos
  phone            String?  // obrigat√≥rio apenas para ADMIN e THERAPIST (valida√ß√£o backend)
  therapySpecialty String?  // obrigat√≥rio apenas para THERAPIST (valida√ß√£o backend)

  // üî• NOVO ‚Äî necess√°rio para seu sistema
  approved Boolean @default(false)
}

enum Role {
  SUPER_ADMIN
  ADMIN
  THERAPIST
}

model Patient {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  age          Int?
  phone        String?
  notes        String?

  // Lista de terapeutas associados a esse paciente (N:N)
  therapistIds String[] @db.ObjectId
  therapists   User[]   @relation(fields: [therapistIds], references: [id])
}

